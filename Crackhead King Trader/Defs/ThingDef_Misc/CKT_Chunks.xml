<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ChunkBase">
    <defName>CKT_Drill_Press_Chuck</defName>
    <label>drill press chuck (stolen)</label>
    <description>A chuck taken from a drill press. While it's useless in its current form, it can be smelted to recover steel.</description>
    <graphicData>
      <texPath>Crackhead_King_Trader/Chuck</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeability>Buyable</tradeability>
    <statBases>
      <Mass>2</Mass>
	  <MarketValue>20</MarketValue>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <smeltable>true</smeltable>
    <smeltProducts>
      <Steel>15</Steel>
    </smeltProducts>
  </ThingDef>

